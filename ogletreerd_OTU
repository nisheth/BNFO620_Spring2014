use strict;
use warnings;

my $inputfile = shift;
my $outfile = shift;

if(!defined ($outfile)) {
  print "USAGE Instruction: Please provide an input file and output file"; 
}

my %myHash;
my @ProjectArray;
my @lengths; 
my @sortSequence;

my $count =0;
my $Sequence = "";  
my $lengthsSequence; 
my $header; 

open INFILE, "$inputfile" or die "Error in opening the $inputfile\n";
open OUTFILE, ">$outfile" or die "Error in opening the $outfile\n"; 

my $line = <INFILE>;
while ($line = <INFILE>) {
	chomp $line;
	if ($line =~ /^>(\w+)\|/) 
	{	
		$header = $1;
	} 
	else {
	$Sequence = $line; 
}
$lengthsSequence = length($Sequence);

if (exists $myHash{$Sequence}) {
		$myHash{$Sequence}{$count}++; 
}
	else {
	$myHash{$Sequence}{$count}= 1; 
}

}

foreach my $key (sort {$myHash{$b}{$count} <=> $myHash{$a}{$count}} keys %myHash) {
	my $numbers = $myHash{$key}{$count};
	print OUTFILE "\nCount Of Duplicate Sequenceuence = $numbers\t";	
}
