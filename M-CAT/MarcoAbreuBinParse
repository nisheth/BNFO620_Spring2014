#Takein arguments from commandline, and run script which runs 3 programs

def Genome_Binner(GenSource, Bin_Size = 1000):
    f =open(GenSource)
    Gen_Bin_Array = []
    sequence_count = 0
    Genome_name = ""
    for line in f:
        if line[0] == ">":
            Gen_Bin_Array.append([Genome_name,sequence_count])
            sequence_count = 0
            Genome_name = line
        else:
            sequence_count += len(line)
    Gen_Bin_Array.append([Genome_name,sequence_count])
    print Gen_Bin_Array


